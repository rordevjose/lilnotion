      window.pixarLogo = "<%= image_url('pixar-logo.png') %>";
      window.ibmLogo = "<%= image_url('ibm-logo.png') %>";
      window.nikeLogo = "<%= image_url('nike-logo.png') %>";
      window.spotifyLogo = "<%= image_url('spotify-logo.png') %>";
      window.slackLogo = "<%= image_url('slack-logo.png') %>";
      window.wiki = "<%= image_url('wiki.png') %>";
      window.product = "<%= image_url('product.png') %>";
      window.engineering = "<%= image_url('engineering.png') %>";
      window.hr = "<%= image_url('hr.png') %>";
      window.design = "<%= image_url('design.png') %>";
      window.sales = "<%= image_url('sales.png') %>";
      window.marketing = "<%= image_url('marketing.png') %>";
      window.text = "<%= image_url('text.png') %>";
      window.textTooltip = "<%= image_url('text-tooltip.png') %>";
      window.h1 = "<%= image_url('h1.png') %>";
      window.h1Tooltip = "<%= image_url('h1-tooltip.png') %>";
      window.h2 = "<%= image_url('h2.png') %>";
      window.h2Tooltip = "<%= image_url('h2-tooltip.png') %>";
