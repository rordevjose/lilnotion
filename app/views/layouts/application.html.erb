      window.h3Tooltip = "<%= image_url('h3-tooltip.png') %>";
      window.toDo = "<%= image_url('to-do.png') %>";
      window.toDoTooltip = "<%= image_url('to-do-tooltip.png') %>";
      window.bulletedList = "<%= image_url('bulleted-list.png') %>";
      window.bulletedListTooltip = "<%= image_url('bulleted-list-tooltip.png') %>";
      window.numberedList = "<%= image_url('numbered-list.png') %>";
      window.numberedListTooltip = "<%= image_url('numbered-list-tooltip.png') %>";
      window.toggle = "<%= image_url('toggle.png') %>";
      window.toggleTooltip = "<%= image_url('toggle-tooltip.png') %>";
      window.code = "<%= image_url('code.png') %>";
