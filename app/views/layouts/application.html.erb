      window.quoteTooltip = "<%= image_url('quote-tooltip.png') %>";
      window.callout = "<%= image_url('callout.png') %>";
      window.calloutTooltip = "<%= image_url('callout-tooltip.png') %>";
      window.divider = "<%= image_url('divider.png') %>";
      window.dividerTooltip = "<%= image_url('divider-tooltip.png') %>";
      window.image = "<%= image_url('image.png') %>";
      window.imageTooltip = "<%= image_url('image-tooltip.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
